<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fastcampus.gearshift.dao.LOrderMapper">


    <!-- 주문 저장 -->
    <insert id="insertOrder" parameterType="LOrderDTO" >

        INSERT INTO orders (
            product_name,
            order_amount,
            discount_amount,
            total_amount,
            order_completed_date,
            ownership_type,
            is_joint_ownership,
            order_status,
            user_id
        ) VALUES (
                     #{productName},
                     #{orderAmount},
                     #{discountAmount},
                     #{totalAmount},
                     NOW(),
                     #{ownershipType},
                     #{isJointOwnership},
                     #{orderStatus},
                     #{userId}
                 )
    </insert>

    <!-- 마지막 주문 ID 조회   -->
    <select id="getLastOrderId" resultType="int">
        SELECT MAX(order_id) FROM orders;
    </select>

</mapper>